<% if @people.empty? %>

    <p>Sorry, but no one has registered!
        Send people <%= link_to "here", :controller => "account", :action => "new" %>!</p>

<% else %>

    <table border="1">

        <tr>
            <th>id</th>
            <th>first_name</th>
            <th>last_name</th>
            <th>email_address</th>
            <th>password</th>
            <th>administrator?</th>
            <th>Most recent action</th>
            <th>See actions</th>
        </tr>

        <% @people.each do |person| %>
        <tr>
            <td><%= person.id %></td>
            <td><%= person.first_name %></td>
            <td><%= person.last_name %></td>
            <td><%= person.email_address %></td>
            <td><%= person.password %></td>
            <td><%= "yes" if person.administrator? %></td>
            <td>
                <% if person.logged_actions.empty? %>
                  (No actions)
                <% else %>
                  <%= distance_of_time_in_words(Time.now, person.logged_actions.sort_by {|action| action.logged_at}.last.logged_at) -%> ago
                <% end %>
            </td>
            <td><%= link_to "See user's actions", :controller => "admin", :action => "view_person_actions", :id => person.id %></td>
        </tr>
        <% end %>

    </table>

<% end %>
