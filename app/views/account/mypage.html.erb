<% @title = "Welcome back, #{@person.first_name}!" %>

<p>Manage my groups</p>
<p><%= link_to "All recent site activity", :controller => :browse, :action => :whats_new %></p>

<div id="viewed-models" class="right-news-box">
  <h2>Most-viewed models</h2>
  <ul>
    <li>One</li>
    <li>Two</li>
    <li>Three</li>
    <li>Four</li>
    <li>Five</li>
  </ul>
</div>

<div id="downloaded-models" class="right-news-box">
  <h2>Most-downloaded models</h2>
  <ul>
    <li>One</li>
    <li>Two</li>
    <li>Three</li>
    <li>Four</li>
    <li>Five</li>
  </ul>
</div>

<div class="left-news-box">
  <h2>Activity in your models</h2>
  <ul>
    <% @model_events.each do |model| %>
        <li><%= whats_new_text(model) %></li>
    <% end %>
  </ul>
</div>

<div class="left-news-box">
  <h2>Activity in your tags</h2>
  <ul>
    <% @tag_events.each do |tag| %>
        <li><%= whats_new_text(tag) %></li>
    <% end %>
  </ul>
</div>

<div class="left-news-box">
  <h2>Questions that you might want to answer</h2>
  <% if @postings.length >= 1 %>
     <ul>
       <% @postings.each do |posting| %>
       <% if posting.person != @person %>
       <li><%= link_to posting.title, :controller => "browse", :action => "one_model", :id => posting.node.id %> by <%= person_link(posting.person) %>, <%= distance_of_time_in_words(Time.now, posting.created_at) %> ago</li>
<% end %>
<% end %>
</ul>
<% else %>
<p>No questions from other people to answer</p>
<% end %>
</div>


