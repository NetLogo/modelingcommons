<% @title = "Information about the '#{@project.name}' project" -%>

<% if @project.nodes.empty? %>
<p><i>No models in this project.</i></p>
<% else %>
<p><%= pluralize(@project.nodes.size, "model") -%> in this project:</p>
<ul>
  <% @project.nodes.each do |node| -%>
  <li><%= link_to node.name, :controller => :browse, :action => :one_node, :id => node.id  -%> (<%= link_to 'remove', :controller => :projects, :action => :remove_model, :id => @project.id, :model_id => node.id -%>)</li>
  <% end %>
</ul>
<% end %>

<% if !@models_to_add.empty? %>
<% form_tag :controller => :projects, :action => :add_model do  %>
<%= hidden_field_tag :project_id, @project.id -%>
Add a model to this project:
<%= select_tag :model_id, options_for_select(@models_to_add)  %>
<%= submit_tag "Add model" %>
<% end %>
<% end %>
