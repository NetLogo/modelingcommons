	<div class="content">
    <% if flash[:notice] -%>
    <div id="flash-notice"><%= flash[:notice] -%></div>
    <script type="text/javascript">
      $(document).ready(function() {
      $('#flash-notice').fadeOut(2500);
      });
    </script>
    <% end -%>
	<div class="padding">
    <h1 id="main-title">
      <% if @headline_avatar -%>
      <%= image_tag @headline_avatar -%>
      <% end -%>

      <% if @headline.blank? -%>
      <%= @title -%>
      <% else -%>
      <%= @headline -%>
      <% end -%>
