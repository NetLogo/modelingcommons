  <head>
    <% @env_title = (Rails.env == 'production' ? '' :  '[DEVELOPMENT/STAGING SERVER]' ) %> 
    <title><%= @env_title -%>NetLogo Modeling Commons -- <%= @title %></title>

    <%= stylesheet_link_tag 'nlcommons', 'browse', 'jquery.autocomplete', 'ui.everything.css', :cache => false -%>
    <!-- defaults below here -->
    <%= javascript_include_tag 'jquery', 'jquery-ui', 'jquery.livequery', 'jquery.autocomplete', 'jquery.validate.pack.js', 'jquery.dataTables', 'application', 'jquery.timeago', :cache => false -%>

  </head>
  <body>
  	<div class="container">
  		<div class="header">
				<div class="banner">
					<h2>NetLogo</h2>
					<h1>Modeling Commons</h1>
				</div>
				<div class="login">
					<div class="login_container">
					<% if @person %>
					Hello <%= link_to @person.fullname, :controller => :account, :action => :mypage -%><%= person_image(@person) %>
					 | <%= link_to_unless_current "Edit personal details", :controller => :account, :action => :edit, :id => @person.id %>
					<% if @person.administrator %> | <%= link_to_unless_current "Admin", :controller => :admin, :action => :index %><% end %>
					 | <%= link_to_unless_current "Logout", :controller => :account, :action => :logout %>
					<% else %>
					
      					<%= link_to "Login", :controller => :account, :action => :login -%>
      				
					<% end %> 
					</div>
				</div>
				<div class="navigation">
					<ul>
						<li>
							<% if @person %>
							<%= link_to "Profile", :controller => :account, :action => :mypage %></li><li>	
							<% else %>
							<%= link_to "Home", :controller => :account, :action => :mypage %></li><li>	
							<% end %>			
							<%= link_to "List models", :controller => :browse, :action => :list_models %></li><li>
							<% if @person %>
							<%= link_to "Projects", :controller => :projects, :action => :index %></li><li>
							<%= link_to "Groups", :controller => :account, :action => :groups %></li><li>
							<%= link_to "Tags", :controller => :account, :action => :tags, :id => @person.id  %></li><li>
							<% end %>
							<%= link_to "Help", :controller => :help, :action => :index  %></li>
					</ul>
					<ul>
						<% if @person %>
						<li>
							<a href="#">Add Model</a></li>	
						<% end %>
					</ul>
					
					
				</div>
				<div class="search">
					<div></div>
					<% form_tag(url_for(:controller => :search, :action => :search_action), { :id => "model_search_form"}) do %>
          			<%= text_field_tag :search_term, nil, {:id => 'model_search	', :placeholder => 'Search Models'} -%>
          			<input style="display: none;" type="submit" value="Search!" />
          			<% end %>
				</div>
			</div>
