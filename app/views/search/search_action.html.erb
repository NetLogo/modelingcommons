<% @title = "Search results" %>
<div id="searchTabs" class="tabs_panel">
	<ul>
		<li<% if !@models.empty? %><% end %>><a href="#modelName"><div class="num-results"><%= @models.size -%></div> Model Name</a></li>
		<li<% if !@author_match_models.empty? %><% end %>><a href="#authorName"><div class="num-results"><%= @author_match_models.size -%></div>Author Name</a></li>
		<li<% if !@tag_match_models.empty? %><% end %>><a href="#tagName"><div class="num-results"><%= @tag_match_models.size -%></div>Tag Name</a></li>
		<li<% if !@info_match_models.empty? %><% end %>><a href="#infoTab"><div class="num-results"><%= @info_match_models.size -%></div>Info Tab</a></li>
		<li<% if !@procedures_match_models.empty? %><% end %>><a href="#proceduresTab"><div class="num-results"><%= @procedures_match_models.size -%></div>Procedures Tab</a></li>
	</ul>
	<div id="modelName">
		<% if @models.empty? %>
		<h2>No matches in model names.</h2>
		<% else %>
		<h2><%= @models.size -%> matched '<%= @original_search_term %>' in the model name:</h2>
		<%= render :partial => "/browse/model_list", :object => @models %>
		<br />
		<% end %>
	</div>
	<div id="authorName">
		<% if @author_match_models.empty? %>
		<h2>No matches in author names.</h2>
		<% else %>
		<h2><%= @author_match_models.size -%> matched '<%= @original_search_term %>' in the author's name:</h2>
		<%= render :partial => "/browse/model_list", :object => @author_match_models %>
		<br />
		<% end %>
	</div>
	<div id="tagName">
		<% if @tag_match_models.empty? %>
		<h2>No matches in tag names.</h2>
		<% else %>
		<h2><%= @tag_match_models.size -%> matched '<%= @original_search_term %>' in one or more tags:</h2>
		<%= render :partial => "/browse/model_list", :object => @tag_match_models %>
		<br />
		<% end %>
	</div>
	<div id="infoTab">
		<% if @info_match_models.empty? %>
		<h2>No matches in info tabs.</h2>
		<% else %>
		<h2><%= @info_match_models.size -%> matched '<%= @original_search_term %>' in the info tab:</h2>
		<%= render :partial => "/browse/model_list", :object => @info_match_models %>
		<br />
		<% end %>
	</div>
	<div id="proceduresTab">
		<% if @procedures_match_models.empty? %>
		<h2>No matches in procedures.</h2>
		<% else %>
		<h2><%= @procedures_match_models.size -%> matched with '<%= @original_search_term %>' in the procedures tab:</h2>
		<%= render :partial => "/browse/model_list", :object => @procedures_match_models %>
		<br />
		<% end %>
	</div>
</div>
	
