<% @title = "Search results" %>

<h2>Models with '<%= @original_search_term %>' in their name</h2>
<% if @models and (not @models.empty?) %>
<%= render :partial => "/browse/model_list", :object => @models %>
<% else %>
<p>No matches in model names.</p>
<% end %>

<h2>Models with '<%= @original_search_term %>' in the author's name</h2>
<% if @author_match_models and (not @author_match_models.empty?) %>
<%= render :partial => "/browse/model_list", :object => @author_match_models %>
<% else %>
<p>No matches in author names.</p>
<% end %>

<h2>Models with '<%= @original_search_term %>' in one or more tags</h2>
<% if @tag_match_models and (not @tag_match_models.empty?) %>
<%= render :partial => "/browse/model_list", :object => @tag_match_models %>
<% else %>
<p>No matches in tag names.</p>
<% end %>
