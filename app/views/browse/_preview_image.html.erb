<% if @model %>
    <% if @model.previews.nil? or @model.previews.empty? %>
        <span id="preview-image">No preview image</span>
    <% else %>
        <img id="preview-image" align="right" src="<%= url_for :controller => :browse, :action => :display_preview, :id => @model.id %>" alt="Preview image for <%= @model.name -%>">
    <% end %>
<% end %>
