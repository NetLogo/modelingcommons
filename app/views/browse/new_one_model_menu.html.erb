    <!-- History menu -->
    <div id="history-div" class="one-model-div">
      <p>History div</p>
    </div>

    <!-- Discuss menu -->
    <div id="discuss-div" class="one-model-div">
      <p>Discuss div</p>
    </div>

    <!-- Tags menu -->
    <div id="tags-div" class="one-model-div">
      <p>Tags div</p>
    </div>

  </body>
</html>
