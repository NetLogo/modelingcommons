if @outcome == 'good'
  page[:flash].remove

  page.insert_html :after, "logged-in-as", '<div id="flash-notice">Updated permissions.</div>'

  page.delay(3) do
    page.visual_effect :fade, 'flash-notice'
  end

else
  @model.errors.each do |error|
    page.insert_html :after, "logged-in-as", "<p>#{error}</p>"
  end
end
