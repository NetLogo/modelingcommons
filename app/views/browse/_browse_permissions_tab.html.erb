<div>
  <% form_remote_tag(:url => { :controller => :browse, :action => :set_permissions }) do %>

  <%= hidden_field_tag 'id', @model.id %>

  <%= render :partial => "permission_selector", :locals => {:person => @person, :model => @model} -%>
  <%= render :partial => "group_selector", :locals => {:person => @person, :model => @model} -%>

  <% if @person and @person.groups.empty? %>
  <p><%= submit_tag "Set permissions", :id => 'set-permissions-button' %></p>
  <% else %>
  <p><%= submit_tag "Set permissions and group", :id => 'set-permissions-button' %></p>
  <% end %>

  <% end %>
</div>
