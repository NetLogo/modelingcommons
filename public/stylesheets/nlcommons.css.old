body {
    background: #abcdef;
    font-family: Times, serif;
    font-size: 15px;
}

/*a:hover {
    color: #000;
    background-color: #ff0;
}*/

#main-menu-div {
    top: 0;
    margin-top: -1em;
    margin-bottom: 2em;
}

#main-menu {
    list-style-type: none;
    margin-left: -3em;
}

#main-menu li {
    background-color: #3e2;
    color: #fff;

    border: 1px solid #000;
    float: left;
    height: 2em;
    line-height: 2em;
    /* width: 7%; */
    width: 6em;
    text-align: center;
    vertical-align: middle;
}

#main-menu li:hover, #main-menu li:hover a {
    color: #3e2;
    background-color: #fff;
    cursor: pointer;
}

#main-menu li a {
    text-decoration: none;
}

#flash-notice {
    z-index: 10;
    position: absolute;
    top: 10%;
    left: 20%;
    width: 50%;
    background: #000;
    color: #FFF;
    border: 2px solid #F00;
    padding: 2em;
}

#navbar-search-form {
    display: inline;
}

#navbar-search-form-text.blank {
	color: #666;
}


#menubar-avatar, #logged-in-as {
    float: left;
    margin-left: 1em;
}

#main-menu, h1, h2, h3, #flash-notice, #logged-in-as {
    font-family: Optima, sans-serif;
    font-weight: bold;
}

h1, #flash-notice {
    clear: both;
}

h1, #flash-notice {
    font-size: 21px;
}

h2 {
    font-size: 17px;
}

.h2-explanation {
    font-size: 13px;
}

h3, #menu-bar {
    font-size: 15px;
}

#person-atom-feed {
    position: absolute;
    top: 3.5em;
    left: 20em;
}

a img {
    border: 0;
    margin: 0;
    padding: 0;
}


.panel, .wide-panel {
    border: 3px solid;
    padding: 5px;
    margin-right: 20px;
    float: left;
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
}

.panel {
    width: 25%;
}

.wide-panel {
    width: 40%;
}

.panel h2 {
    text-align: center;
}

.panel table tr td {
    padding-bottom: 5px;
}

.panel table tr td input[type="submit"] {
    margin-left: 50%;
}

/* ------------------------------------------------------------ */
/* Tabs */
/* ------------------------------------------------------------ */

div ul.subsection_tabs {
    clear: both;
    height: 10px;
    list-style: none;
    margin-left: -3em;
}

#model_tabs ul.subsection_tabs, #group_tabs ul.subsection_tabs {
    margin-left: 10px;
}

div ul.subsection_tabs li.tab {
    float: left;
    margin-right: 7px;
    text-align: center;
    border: 2px solid 000;
}

div ul.subsection_tabs li.tab a {
    background-color: #fff;
    color: #666;
    display: block;
    font-family: Optima, sans-serif;
    height: 20px;
    text-decoration: none;
    width: 80px;
}

div ul.subsection_tabs li.tab a.active {
    color: #f00;
    background-color: #ddd;
}

div ul.subsection_tabs li.tab a:hover {
    color: #fff;
    background-color: #666;
}

#left-news-box, #right-news-box {
    position: absolute;
    top: 8.5em;
    width: 45%;
}

#left-news-box {
    left: 1em;
}

#right-news-box {
    left: 50%;
}

.news-box {
    border: 2px solid #f00;
    background-color: #fff;
    margin-bottom: 2em;
}

/* ------------------------------------------------------------ */
/* DataTables */
.datatable {
	border-collapse: collapse;
	font-size: 15px;
}

.datatable .even {
    background-color: #abcde0;
}
.datatable span.hidden_elapsed_time {
	display: none;
}
/* ------------------------------------------------------------ */

/* Pagination nested */
.paginate_disabled_previous, .paginate_enabled_previous, .paginate_disabled_next, .paginate_enabled_next {
    height: 19px;
    width: 19px;
    margin-left: 3px;
    float: left;
}

.paginate_disabled_previous {
    background-image: url('/images/back_disabled.jpg');
}

.paginate_enabled_previous {
    background-image: url('/images/back_enabled.jpg');
}

.paginate_disabled_next {
    background-image: url('/images/forward_disabled.jpg');
}

.paginate_enabled_next {
    background-image: url('/images/forward_enabled.jpg');
}

.sorting_asc {
    background: url('../images/sort_asc.jpg') no-repeat center right;
}

.sorting_desc {
    background: url('../images/sort_desc.jpg') no-repeat center right;
}

.sorting {
    background: url('../images/sort_both.jpg') no-repeat center right;
}
div.foreSortIcon {
	background: url('../images/sort_both.jpg') no-repeat center right;
	width: 16px;
	height: 16px;
	display: inline-block;
	float: right;
}

/* Autocomplete */
ul.jq-ui-autocomplete {
    position: absolute;
    overflow: hidden;
    background-color: #fff;
    border: 1px solid #aaa;
    margin: 0px;
    padding: 0;
    list-style: none;
    font: normal .75em/.75em Verdana, Arial, sans-serif;
    color: #333;
}
ul.jq-ui-autocomplete li {
    display: block;
    padding: .3em .5em .3em .3em;
    overflow: hidden;
    width: 100%;
}

ul.jq-ui-autocomplete li.active {
    background-color: #3875d7;
    color: #fff;
}

.deleted {
    text-decoration: line-through;
}

table#new-person-form tr td {
    width: 10em;
}

.fieldWithErrors {
    padding: 2px;
    background-color: red;
    display: table;
}

#errorExplanation {
    width: 450px;
    border: 2px solid red;
    padding: 7px;
    padding-bottom: 0;
    margin-bottom: 20px;
    background-color: #f0f0f0;
}

#error_explanation h2 {
    text-align: left;
    font-weight: bold;
    padding: 5px 5px 5px 15px;
    font-size: 12px;
    margin: -7px;
    margin-bottom: 0px;
    background-color: #c00;
    color: #fff;
}

#error_explanation ul li {
    font-size: 12px;
    list-style: square;
}

tr.scaffold-row {
    border-bottom: 2px solid black;
}

#permission-group-reminder {
    font-style: italic;
}

/* jQuery validator */
.error {
    color: red;
}

input.error {
    border: 2px solid red;
}

div#searchTabs {
	/*font-family: inherit;*/
	/*background: white;*/
}
#searchTabs .highlight-tabs {
	font-weight: bold;
	font-size: 100%;
	
}

div.main-menu-new {
	width: 100%;
	height: 35px;
	margin-bottom: 5px;
	background-color: red;
	float:left;
	
}
div.main-menu-new ul {
	list-style-type: none;
	padding: 0px;
	margin: 0px;
	float:left;
	
}
div.main-menu-new ul li {
	display: inline-block;
	padding-left: 5px;
	padding-right: 5px;
	padding-top: 5px;
	padding-bottom: 5px;
	line-height: 20px;
	height: 20px;
	vertical-align: middle;
	float:left;
	font-size: 16px;
	font-family: optima;
	font-weight: bold;
	background-color: blue;
}
div.main-menu-new ul li.selected {
	padding-bottom: 18px;
}
div.main-menu-new ul.left {
	float:left;
	
}
div.main-menu-new ul.left li {
	margin-right: 1px;
}
div.main-menu-new ul.right li {
	margin-left: 1px;
}

div.main-menu-new ul.right {
	float:right;
}
div.main-menu-new ul li img {
	height: 20px;
	margin-right: 5px;
	vertical-align: top;
}
